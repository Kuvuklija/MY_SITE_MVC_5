@model MyFirstSite.WebUI.Models.SelectedCategoryModel
@{
    bool horizontal = (bool)(ViewContext.RouteData.Values["horizontalLayout"] ?? false);
    string wrapperClass = horizontal ? "btn-group btn-group-sm btn-group-justified" : null;
}

<div class="@wrapperClass"> <!--manage by horizontal or vertical position of buttons-->
    @Html.ActionLink("Home","List","Home",new { @class=horizontal ? "btn btn-default btn-sm":"btn btn-block btn-default btn-lg"})
    @foreach(var link in Model.categories) {
        @Html.RouteLink(link, new {
            controller="Home",
            action="List",
            category=link,
            page=1
        }, new{ @class=(horizontal ? "btn btn-default btn-sm":"btn btn-block btn-default btn-lg")
                              +((link==Model.selectedCategory)?"bnt-primary":"" )})
    }
</div>

