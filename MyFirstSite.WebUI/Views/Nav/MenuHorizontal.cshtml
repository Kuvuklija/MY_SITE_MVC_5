@*model IEnumerable<string>*@
@model MyFirstSite.WebUI.Models.SelectedCategoryModel

<div class="btn btn-group btn-group-justified">
    @Html.ActionLink("Home","List","Product", null, new { @class="btn btn-default btn-sm"})
    @foreach(var link in Model.categories) {
        @Html.RouteLink(link, new {
            controller="Product",
            action="List",
            category=link,
            page=1
        }, new{@class="btn btn-default btn-sm"+(link==Model.selectedCategory ? " btn-primary":"")})
    }
</div>
