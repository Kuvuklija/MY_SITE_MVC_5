
@model MyFirstSite.Domain.Entities.Cart

<div class="navbar-right hidden-xs">
    @Html.ActionLink("Checkout", "Index", "Cart",
        new { returnUrl=Request.Url.PathAndQuery},
        new { @class="btn btn-default navbar-btn"})
</div>
<div class="navbar-right visible-xs">
    <a class="btn btn-default navbar-btn" href=@Url.Action("Index","Cart", new { returnUrl=Request.Url.PathAndQuery})>
       <span class="glyphicon glyphicon-shopping-cart"></span>
    </a>
</div>

<div class="navbar-text navbar-right">
    <b class="hidden-xs">You cart:</b>
    @Model.Lines.Sum(x=>x.Quantity) items(s)
    @Model.ComputeTotalValue().ToString("c")
</div> 