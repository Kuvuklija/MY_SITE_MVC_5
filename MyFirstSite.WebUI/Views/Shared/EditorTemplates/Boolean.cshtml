@model bool?
@{
    ModelState state = ViewData.ModelState[ViewData.ModelMetadata.PropertyName];
    bool value = Model ?? false;
    if(state!=null && state.Errors.Count > 0) {
        <span style="padding: 0; margin: 1px">
            @Html.CheckBox("", value)
        </span>
    } else{
        @Html.CheckBox("", value)
    }
}